class FourCal :
    def setdata(self, first, second) :
        self.first = first
        self.second = second

    def add(self) :
        result = self.first + self.second
        return result

    def sub(self) :
        result = self.first - self.second
        return result
        
    def multi(self) :
        result = self.first * self.second
        return result

    def div(self) :
        result = self.first / self.second
        return result


a = FourCal()
a.setdata(4, 2)
print(a.sub())
print(a.multi())
print(a.div())


